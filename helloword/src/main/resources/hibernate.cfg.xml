<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>

		<!-- Connection of Configuration -->
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url"> jdbc:mysql://localhost/helloword</property>
		<property name="connection.username">caio</property>
		<property name="connection.password">123456</property>

		<property name="current_session_context_class">thread</property>

		<!-- Impression of SQL -->
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>

		<!-- Dialect -->
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hbm2ddl.auto">update</property>

		<!-- Mapping Entities -->

		<mapping class="entities.Empresa" />
		<mapping class="entities.PlanilhaUp" />
		<mapping class="entities.PlanilhaDown" />
		<mapping class="entities.Plano" />
		<mapping class="entities.Veiculo" />
		
	</session-factory>
</hibernate-configuration>
